@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<div class="col-lg-4 col-lg-offset-1">
    <h2>Login</h2>

    <form action="/User/Login" method="post">
        <div class="form-group">
            <label>
                Login:
            </label> <input type="text" class="form-control " name="login" value="@ViewBag.Login" /> <br />
        </div>
        <div class="form-group">
            <label>
                Password:
            </label>
            <input type="password" name="password" class="form-control " /> <br />
        </div>

        <input type="submit" class="btn btn-md btn-default" value="Login" />
        <a class="btn btn-primary btn-md " href="@Url.Content("/User/SignUp")">Sign Up</a>
        @{
            if (ViewBag.MSG != null)
            { <span style="color:red;" class="alert alert-danger">@ViewBag.MSG</span>}
        }
    </form>

    
</div>
<form method="post" action="/User/ForgotPassword" enctype="multipart/form-data">
    <div class="col-lg-11 col-lg-offset-1">

        <div class="col-lg-4">
            <div class="col-lg-12">
                <br />
            </div>
            <div class="form-group">
                <label>Forgot Password?</label>

            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" required name="forgEmail" value="" class="form-control">
            </div>
        </div>

    </div>
    <div class="col-lg-11 col-lg-offset-1" >
        <input type="submit" value="Reset Password" name="resetbtn" class="btn btn-md btn-default" />
    </div>
</form>