@model PMS.Entities.UserDTO
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<div>
    <div class="col-lg-12 ">
        <center>
            <h1>User Profile</h1>
        </center>
    </div>
    <div class="col-lg-12">
        
            <div class="col-lg-4 col-lg-offset-1">
                <div class="col-lg-12">
                    <div class="form-group">
                     
                        <label>Name</label>
                        <input type="text" disabled required name="Name" value="@Model.Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Login</label>
                        <input type="text" disabled required name="Login" value="@Model.Login" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" disabled  name="Email" value="@Model.Email" class="form-control">
                    </div>


                </div>
            </div>
            <div class="col-lg-4 col-lg-offset-3">
                <div style="border:1px solid black; height:201px; width:201px;background:grey;">
                    <img src="@Url.Content("/UploadedFiles/" + @Model.PictureName)" alt="profile image" style="position: relative; z-index: 3; height: 200px; width: 200px" id="imgDisp" /><br />

                </div>
                <div class="col-lg-12">
                    <br />
                </div>

                
            </div>

    </div>
</div>

