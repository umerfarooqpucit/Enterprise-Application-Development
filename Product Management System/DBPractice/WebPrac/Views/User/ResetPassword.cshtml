
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<div>
    <div class="col-lg-12 ">
        <center>
            <h1>Reset Password</h1>
        </center>
    </div>
    <div class="col-lg-12">
        <div class="col-lg-4 col-lg-offset-1">
            <form method="post" action="/User/ResetPassword" enctype="multipart/form-data">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Enter New Password</label>
                        <input type="password" required name="txtPassNew" value="" class="form-control">
                    </div>
                </div>
                <div class="col-lg-12">
                    <input type="submit" value="Save" name="checkbtn" class="btn btn-md btn-default" />
                </div>
            </form>
        </div>
        <div class="col-lg-11 col-lg-offset-1">

            <h5 style="color:red">@ViewBag.MSG</h5>
            <br />
        </div>
    </div>
</div>

