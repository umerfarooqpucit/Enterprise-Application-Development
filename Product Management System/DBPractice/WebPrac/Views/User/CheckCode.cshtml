
@{
    ViewBag.Title = "CheckCode";
    Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<div>
    <div class="col-lg-12 ">
        <center>
            <h1>Reset Password</h1>
        </center>
    </div>
    <div class="col-lg-12">
        <div class="col-lg-4 col-lg-offset-1">
            <form method="post" action="/User/CheckCode" enctype="multipart/form-data">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Enter Code</label>
                        <input type="text" required name="txtCode" value="" class="form-control">
                    </div>
                </div>
                <div class="col-lg-12">

                    <h4 style="color:red">@ViewBag.MSG</h4>

                </div>
                <div class="col-lg-12">
                    <input type="submit" value="Check" name="checkbtn" class="btn btn-md btn-default" />
                </div>
            </form>
        </div>

    </div>
</div>
