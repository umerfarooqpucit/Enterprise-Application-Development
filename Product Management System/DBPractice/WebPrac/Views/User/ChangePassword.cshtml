
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<div>
    <div class="col-lg-12 ">
        <center>
            <h1>Change Password</h1>
        </center>
    </div>
    <div class="col-lg-12">
        <form method="post" action="/User/ChangePassword" enctype="multipart/form-data">
            <div class="col-lg-4 col-lg-offset-1">
                <div class="col-lg-12">
                    <div class="form-group">
                        <input type="hidden" name="UserID" value="@ViewBag.ID" class="form-control">
                        <label>Old Password</label>
                        <input type="password" required name="OldPass" value="@ViewBag.OldPass" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" required name="NewPass" value="@ViewBag.NewPass" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" required name="ConPass" value="@ViewBag.ConPass" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-lg-11 col-lg-offset-1">

                <h5 style="color:red">@ViewBag.MSG</h5>
                <br />
            </div>
            <div class="col-lg-8 col-lg-offset-4">
                <input type="submit" value="Update" name="chgPassbtn" class="btn btn-md btn-default" />
                <input type="reset" class="btn btn-md btn-default" value="Clear"><br />
            </div>
            <div class="col-lg-12">
                <br />
            </div>
        </form>

    </div>
</div>

