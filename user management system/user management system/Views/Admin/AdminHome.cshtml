@model List<Entity.UserDTO>

@{
    ViewBag.Title = "AdminHome";
    Layout = "~/Views/Shared/_Shared.cshtml";
}

<div class="col-lg-5 col-lg-offset-1" >
    <h1>
        Welcome @Session["login"]
    </h1>
</div>
<div class="col-lg-2 col-lg-offset-4">
    <div class="col-lg-12">
        <br />
    </div>
    <a href="@Url.Content("/User/Logout")" class="btn btn-md btn-default">Logout</a>
</div> 
<div class="col-lg-11 col-lg-offset-1">
    <center>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>UserID</th>
                    <th>Name</th>
                    <th>Login</th>
                    <th>Address</th>
                    <th>Age</th>
                    <th>Edit</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.ID</td>
                        <td>@obj.txtName</td>
                        <td>@obj.txtLogin</td>
                        <td>@obj.txtAddress</td>
                        <td>@obj.txtAge</td>
                        <td><a href='@Url.Content("~/Admin/Edit/"+obj.ID)' class="btn btn-md btn-primary">Edit</a></td>
                    </tr>
                }
            </tbody>

        </table>
    </center>
    
</div>


