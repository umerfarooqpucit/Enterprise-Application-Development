@{
    Layout = "~/Views/Shared/_Shared.cshtml";
    ViewBag.title = "Existing User";
}

<div>
    <div class="col-lg-12 ">
        <center>
            <h1>Existing User</h1>
        </center>
    </div>
    <div class="col-lg-12">
        <div class="col-lg-4 col-lg-offset-1">
            <form method="post" action="/User/Login" enctype="multipart/form-data">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Login</label>
                        <input type="text" required name="txtLogin" value="@ViewBag.login" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" required name="txtPassword" value="" class="form-control">
                    </div>
                </div>
                <div class="col-lg-12">
                    <h4 style="color:red">@ViewBag.Message</h4>
                </div>
                <div class="col-lg-12">
                    <input type="submit" value="Login" name="loginbtn" class="btn btn-md btn-default" />
                    <input type="reset" class="btn btn-md btn-default" value="Clear"><br />
                </div>
            </form>
        </div>
        <div class="col-lg-11 col-lg-offset-1">
            <form method="post" action="/User/ForgotPassword" enctype="multipart/form-data">
                <div class="col-lg-4">
                    <div class="col-lg-12">
                        <br />
                    </div>
                    <div class="form-group">
                        <label>Forgot Password?</label>
                        
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" required name="forgEmail" value="" class="form-control">
                    </div>
                </div>
                <div class="col-lg-12">
                    <input type="submit" value="Reset Password" name="resetbtn" class="btn btn-md btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>